
$button-text-transform = none

@import '~vuetify/src/stylus/main'

json('../raccoonTheme.json')

.app-primary-text
  color primary

.app-secondary-text
  color secondary

.app-nem-orange-text
  color nemOrange

.app-medium-text
  font-size medium

.app-small-text
  font-size small

.app-x-small-text
  font-size x-small

.app-large-text
  font-size large

.app-x-large-text
  font-size x-large

.app-hint-text
  font-size small
  color gray

.app-primary-background
  background-color primary

.app-bottom-container
  position absolute
  bottom 16px
  left 0
  right 0
  margin auto

.app-bottom-fix
  position absolute
  bottom 0
  left 0
  right 0
  margin auto

.app-match-parent
  position absolute
  top 0
  bottom 0
  left 0
  right 0

.app-center-in-container
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin auto

.app-center-in-container-transform
  position absolute
  top 50%
  left 50%
  -webkit-transform translateY(-50%) translateX(-50%)
  transform translateY(-50%) translateX(-50%)


.app-pager-indicator
  width 12px
  height 12px
  border-radius 50%
  background-color primary
  display inline
  margin-left 8px
  margin-right 8px

.app-pager-indicator-inactive
  width 12px
  height 12px
  border-radius 50%
  background-color textLightGray
  display inline
  margin-left 8px
  margin-right 8px

.app-hero-image
  margin-left auto
  margin-right auto
  max-width 100vw
  max-height 25vh
  background primary

.app-hero-image-large
  margin-left auto
  margin-right auto
  max-width 100vw
  max-height 50vh
